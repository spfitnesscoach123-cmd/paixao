{
  "expo": {
    "name": "LoadManager Pro",
    "slug": "loadmanager-pro-vbt",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "loadmanager",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "jsEngine": "jsc",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.loadmanager.app",
      "buildNumber": "24",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Escolha fotos dos atletas",
        "NSCameraUsageDescription": "Precisamos acessar a câmera para capturar dados do VBT.",
        "NSMicrophoneUsageDescription": "Necessário para captura de vídeo do VBT."
      }
    },
    "android": {
      "package": "com.loadmanager.app",
      "versionCode": 24,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#000F1F"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-image.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#000000"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Precisamos acessar a câmera para capturar dados do VBT.",
          "microphonePermission": "Necessário para captura de vídeo do VBT.",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Escolha fotos dos atletas",
          "cameraPermission": "Precisamos acessar a câmera para capturar dados do VBT."
        }
      ],
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "Precisamos acessar a câmera para capturar dados do VBT e detecção de pose.",
          "enableMicrophonePermission": false,
          "enableLocation": false
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
